{{>_navbarAluno}}
<div class="container mt-4">
    {{>_msg}}
  <h2>Meus eventos</h2>
  <hr>
<!-- Button trigger modal -->
<!---->
  <a href="#">
    <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">Nova Inscrição</button>
  </a>
<!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalCenterTitle">Deseja realizar uma nova inscrição?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <div class="modal-body">
        <h4>Você deseja realizar sua inscrição em um curso ou evento?</h4>
      </div>
      <div class="modal-footer">
        <a href="/aluno/inscricoes/cad">
            <button type="button" class="btn btn-secondary">Inscrição em um curso</button>
        </a>
        <a href="/aluno/inscricoesEvents/cadEvents">
          <button type="button" class="btn btn-primary">Inscrição em um evento</button>
        </a>
      </div>
    </div>
  </div>
</div>
{{#each inscricoesEvents}}
    <div class="card mt-4">
        <div class="card-body">
            <h4 id="txtTitle">{{evento.nome}}</h4>
            <small><strong>Data: </strong> {{data}}</small>
            <br>
            <form action="/aluno/inscricoes/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Cancelar inscrição</button>
            </form>
        </div>
    </div>
    <hr>
{{else}}
    <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
        Você ainda não se inscreveu em nenhum evento!
    </div>    
{{/each}}
</div>

